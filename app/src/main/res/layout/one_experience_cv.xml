<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/midGap"
    android:layout_marginStart="@dimen/midGap"
    android:layout_marginEnd="@dimen/midGap"
    >
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/midGap"
        android:paddingEnd="@dimen/midGap"
        android:paddingBottom="@dimen/bigGap"
        android:paddingTop="@dimen/bigGap"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/midGap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/txt_name"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/date_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/txt_name"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_position"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/txt_name"
            android:layout_weight="2"
            android:layout_marginStart="@dimen/midGap"
            android:layout_marginEnd="@dimen/midGap" />

<!--        <TextView-->
<!--            android:id="@+id/txt_company"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            style="@style/txt_name"-->
<!--            android:layout_weight="2"-->
<!--            android:layout_marginStart="@dimen/midGap"-->
<!--            android:layout_marginEnd="@dimen/midGap" />-->
     </LinearLayout>
    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/txt_name"
        android:layout_marginStart="@dimen/midGap"
        android:layout_marginEnd="@dimen/midGap" />
</LinearLayout>
</androidx.cardview.widget.CardView>