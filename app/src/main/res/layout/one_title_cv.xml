<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/midGap"
    android:layout_marginStart="@dimen/midGap"
    android:layout_marginEnd="@dimen/midGap"
    >
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/midGap"
        android:paddingEnd="@dimen/midGap"
        android:paddingBottom="@dimen/bigGap"
        android:paddingTop="@dimen/bigGap"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/midGap"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/midGap"
            android:cropToPadding="true"
            app:srcCompat="@drawable/ic_licky" />
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/txt_name"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_surname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/txt_name"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/midGap"
            android:layout_marginEnd="@dimen/midGap" />

        <ImageView
            android:id="@+id/icon_treedot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/midGap"
            app:srcCompat="@drawable/ic_dots_vertical_black_24dp" />

    </LinearLayout>

        <include
            layout="@layout/layout_full_cv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

</LinearLayout>
        </androidx.cardview.widget.CardView>